#include "sort.h"







void	get_info(t_psort *ps)
{
	ps->first = ps->len / 4;
	ps->second = (ps->len - ps->first) / 3;
	ps->third = (ps->len - ps->second) / 2;
	ps->fourth = ps->len - ps->third;

	ft_printf("1.%d\n2.%d\n3.%d\n4.%d", ps->first, ps->second, ps->third, ps->fouth);
}


void	pre_sort(t_list	*s)
{
	t_psort	ps;

	ps.len = ft_lstlen(s);
	if (ps.len > 3)
	{
		get_info(&ps);
	}
	else 
		return ;
}
